@model LoginViewModel
@{
    ViewBag.Title = "Sign up";
    Layout = "Layout/_Unauthenticatedlayout";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-4">
        <img src="/images/login-illustration.svg" alt="Login image" class="img-fluid">
    </div>
    <div class="col-lg-4 contents">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="mb-4">
                    <h3>@ViewBag.Title</h3>
                    <p class="mb-4">Welcome back to Game Gather! Fill in your email and password in order to sign in.</p>
                </div>
                <div class="validation-error" asp-validation-summary="All"></div>
                <form asp-action="Login" asp-controller="Account" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="form-group mb-2">
                        <label asp-for="Email"></label>
                        <div><span asp-validation-for="Email" class="validation-error"></span></div>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <div><span asp-validation-for="Password" class="validation-error"></span></div>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <div class="text-center">
                        <button class="btn btn-block btn-primary mt-4 px-3" type="submit">Sign In</button>
                    </div>
                </form>
                <p class="text-center mt-4">
                    Don't have an account? <a asp-area="" asp-controller="Account" asp-action="Register">Sign up</a>
                </p>
            </div>
        </div>
    </div>
</div>
