@model LoginViewModel
@{
    ViewBag.Title = "Log In";
}

<div class="row justify-content-center mt-5">
    <div class="col-lg-4">
        <img src="/images/login-illustration.svg" alt="Login image" class="img-fluid">
    </div>
    <div class="col-lg-4 contents">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="mb-4">
                    <h3>Sign In</h3>
                    <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <form asp-action="Login" asp-controller="Account" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="form-group first">
                        <label asp-for="Email"></label>
                        <div><span asp-validation-for="Email" class="text-danger"></span></div>
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group last mb-4">
                        <label asp-for="Password"></label>
                        <div><span asp-validation-for="Password" class="text-danger"></span></div>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <button class="btn btn-block btn-primary" type="submit">Log In</button>
                </form>
            </div>
        </div>
    </div>
</div>
